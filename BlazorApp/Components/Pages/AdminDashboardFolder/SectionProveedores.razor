@page "/dashboard/admin/proveedores"
@layout AdminDashboardLayout
@using DTOs
@using API

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger fw-bold">Gestión de Proveedores</h2>
        <button class="btn btn-primary" @onclick="AbrirModalAgregar">
            <i class="bi bi-plus-circle"></i> Agregar Proveedor
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-danger" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Cargando proveedores...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Error al cargar proveedores: @errorMessage
            <button class="btn btn-sm btn-outline-danger ms-3" @onclick="CargarProveedores">
                <i class="bi bi-arrow-clockwise"></i> Reintentar
            </button>
        </div>
    }
    else if (proveedores == null || proveedores.Count == 0)
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <h1 class="display-1">🚚</h1>
                <h3 class="text-muted">No hay proveedores registrados</h3>
                <p class="text-secondary">Comienza agregando el primer proveedor</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background: linear-gradient(135deg, var(--rojo-principal) 0%, var(--rojo-oscuro) 100%);" class="text-white">
                        <tr>
                            <th class="py-3">#</th>
                            <th class="py-3">Razón Social</th>
                            <th class="py-3">CUIT</th>
                            <th class="py-3">Email</th>
                            <th class="py-3">Teléfono</th>
                            <th class="py-3">Tipo Ingrediente</th>
                            <th class="py-3 text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var proveedor in proveedores)
                        {
                            <tr>
                                <td>@proveedor.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="fs-4 me-2">🚚</span>
                                        <strong>@proveedor.RazonSocial</strong>
                                    </div>
                                </td>
                                <td class="text-muted">@proveedor.Cuit</td>
                                <td class="text-muted small">@proveedor.Email</td>
                                <td class="text-muted">@proveedor.Telefono</td>
                                <td>
                                    <span class="badge" style="background-color: var(--rojo-muy-claro); color: var(--rojo-oscuro);">
                                        @proveedor.TipoIngrediente
                                    </span>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="@(() => AbrirModalEditar(proveedor))">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="@(() => ConfirmarEliminacion(proveedor))">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @* Modal Agregar/Editar *@
    @if (showModal)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" @onclick="CerrarModal">
            <div class="modal-dialog modal-dialog-centered modal-lg" @onclick:stopPropagation="true">
                <div class="modal-content">
                    <div class="modal-header" style="background-color: var(--rojo-muy-claro);">
                        <h5 class="modal-title text-danger fw-bold">
                            @(isEditMode ? "Editar Proveedor" : "Nuevo Proveedor")
                        </h5>
                        <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                    </div>
                    <form @onsubmit="GuardarProveedor">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Razón Social *</label>
                                <input type="text" class="form-control" @bind="proveedorActual.RazonSocial" required />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">CUIT *</label>
                                    <input type="text" class="form-control" @bind="proveedorActual.Cuit"
                                           placeholder="20-12345678-9" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Teléfono *</label>
                                    <input type="tel" class="form-control" @bind="proveedorActual.Telefono" required />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Email *</label>
                                <input type="email" class="form-control" @bind="proveedorActual.Email" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Tipo de Ingrediente *</label>
                                <input type="text" class="form-control" @bind="proveedorActual.TipoIngrediente"
                                       placeholder="Ej: Verduras, Carnes, Lácteos..." required />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CerrarModal" disabled="@isSaving">
                                Cancelar
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-save"></i> @(isEditMode ? "Guardar Cambios" : "Crear Proveedor")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

    @* Modal Confirmar Eliminación *@
    @if (showDeleteModal)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" @onclick="CerrarModalEliminar">
            <div class="modal-dialog modal-dialog-centered modal-sm" @onclick:stopPropagation="true">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title fw-bold">Confirmar Eliminación</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CerrarModalEliminar"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Estás seguro de eliminar al proveedor <strong>@proveedorAEliminar?.RazonSocial</strong>?</p>
                        <p class="text-danger small mb-0">
                            <i class="bi bi-exclamation-triangle"></i> Esta acción no se puede deshacer.
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModalEliminar" disabled="@isDeleting">
                            Cancelar
                        </button>
                        <button type="button" class="btn btn-danger" @onclick="EliminarProveedor" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @* Toast *@
    @if (mostrarToast)
    {
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
            <div class="toast show" role="alert">
                <div class="toast-header @(toastExito ? "bg-success" : "bg-danger") text-white">
                    <i class="bi @(toastExito ? "bi-check-circle-fill" : "bi-x-circle-fill") me-2"></i>
                    <strong class="me-auto">@(toastExito ? "¡Éxito!" : "Error")</strong>
                    <button type="button" class="btn-close btn-close-white" @onclick="@(() => mostrarToast = false)"></button>
                </div>
                <div class="toast-body">@mensajeToast</div>
            </div>
        </div>
    }
</div>

@code {
    private List<ProveedorDTO> proveedores = new();
    private bool isLoading = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private bool showModal = false;
    private bool showDeleteModal = false;
    private bool isEditMode = false;
    private ProveedorDTO proveedorActual = new();
    private ProveedorDTO? proveedorAEliminar = null;
    private bool mostrarToast = false;
    private string mensajeToast = string.Empty;
    private bool toastExito = true;
    private string? errorMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await CargarProveedores();
    }

    private async Task CargarProveedores()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            proveedores = (await ProveedorApi.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            proveedores = new List<ProveedorDTO>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void AbrirModalAgregar()
    {
        isEditMode = false;
        proveedorActual = new ProveedorDTO();
        showModal = true;
    }

    private void AbrirModalEditar(ProveedorDTO proveedor)
    {
        isEditMode = true;
        proveedorActual = new ProveedorDTO
            {
                Id = proveedor.Id,
                RazonSocial = proveedor.RazonSocial,
                Cuit = proveedor.Cuit,
                Email = proveedor.Email,
                Telefono = proveedor.Telefono,
                TipoIngrediente = proveedor.TipoIngrediente
            };
        showModal = true;
    }

    private void CerrarModal()
    {
        showModal = false;
        proveedorActual = new();
    }

    private async Task GuardarProveedor()
    {
        isSaving = true;

        try
        {
            if (isEditMode)
            {
                await ProveedorApi.UpdateAsync(proveedorActual);
                MostrarToast("Proveedor actualizado exitosamente", true);
            }
            else
            {
                await ProveedorApi.AddAsync(proveedorActual);
                MostrarToast("Proveedor creado exitosamente", true);
            }

            CerrarModal();
            await CargarProveedores();
        }
        catch (Exception ex)
        {
            MostrarToast($"Error al guardar: {ex.Message}", false);
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void ConfirmarEliminacion(ProveedorDTO proveedor)
    {
        proveedorAEliminar = proveedor;
        showDeleteModal = true;
    }

    private void CerrarModalEliminar()
    {
        showDeleteModal = false;
        proveedorAEliminar = null;
    }

    private async Task EliminarProveedor()
    {
        if (proveedorAEliminar != null)
        {
            isDeleting = true;

            try
            {
                await ProveedorApi.DeleteAsync(proveedorAEliminar.Id);
                MostrarToast("Proveedor eliminado exitosamente", true);
                CerrarModalEliminar();
                await CargarProveedores();
            }
            catch (Exception ex)
            {
                MostrarToast($"Error al eliminar: {ex.Message}", false);
            }
            finally
            {
                isDeleting = false;
                StateHasChanged();
            }
        }
    }

    private void MostrarToast(string mensaje, bool exito)
    {
        mensajeToast = mensaje;
        toastExito = exito;
        mostrarToast = true;
        StateHasChanged();

        Task.Delay(3000).ContinueWith(_ =>
        {
            mostrarToast = false;
            InvokeAsync(StateHasChanged);
        });
    }
}